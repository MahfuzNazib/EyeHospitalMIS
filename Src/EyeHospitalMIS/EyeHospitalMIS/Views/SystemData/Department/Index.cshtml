@{
    ViewData["Title"] = "Department List";
}
@using EysHospitalMIS.Models.DTO
@model DataBindModel
@{
    bool isSuccess = TempData["isSuccess"] as bool? ?? false;
}
<div id="PlaceHolderHere"></div>
<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">

            <div class="row">
                <div class="col">

                    <div class="h-100">
                        <div class="row mb-3 pb-1">
                            <div class="col-12">
                                <div class="d-flex align-items-lg-center flex-lg-row flex-column">
                                    <div class="flex-grow-1">
                                        <h4 class="fs-16 mb-1">All Department List</h4>
                                        <p class="text-muted mb-0">
                                            EyeSys all department list with report
                                        </p>
                                    </div>
                                    <div class="mt-3 mt-lg-0">
                                        <form action="javascript:void(0);">
                                            <div class="row g-3 mb-0 align-items-center">
                                                <div class="col-sm-auto">
                                                    <div class="input-group">
                                                        <input type="text" class="form-control border dash-filter-picker" placeholder="Search Here...">
                                                        <div class="input-group-text bg-primary border-primary text-white">
                                                            <i class="ri-calendar-2-line"></i>
                                                        </div>
                                                    </div>
                                                </div>


                                                <!-- Add New Department -->
                                                <div class="col-auto">
                                                    <button type="button" 
                                                            class="btn btn-soft-primary" 
                                                            data-bs-toggle="ajax-modal"
                                                            data-bs-target="#addDepartment" 
                                                            data-url="@Url.Action("AddDepartment")">
                                                        <i class="ri-add-circle-line align-middle me-1"></i>
                                                        Add Department
                                                    </button>
                                                </div>
                                                <!-- /Add New Department-->
                                                <div class="col-auto">
                                                    <button type="button" class="btn btn-soft-secondary btn-icon waves-effect waves-light layout-rightside-btn"><i class="ri-pulse-line"></i></button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xl-12">
                                <div class="card">
                                    <div class="card-header align-items-center d-flex">
                                        <h4 class="card-title mb-0 flex-grow-1">Recent Departments</h4>
                                        <div class="flex-shrink-0">
                                            <button type="button" class="btn btn-soft-primary btn-sm">
                                                <i class="ri-file-list-3-line align-middle"></i> Generate Report
                                            </button>
                                        </div>
                                    </div>

                                    <!-- Department List Data Start -->
                                    <div class="card-body">
                                        <div class="table-responsive table-card">
                                            <table class="table table-borderless table-centered align-middle table-nowrap mb-0">
                                                <thead class="text-muted table-light">
                                                    <tr>
                                                        <th scope="col">Dept. ID</th>
                                                        <th scope="col">Department Name</th>
                                                        <th scope="col">Short Name</th>
                                                        <th scope="col">Status</th>
                                                        <th scope="col">Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach(var department in Model.data)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <a href="apps-ecommerce-order-details.html" class="fw-medium link-primary">#EyeSys-@department.ID</a>
                                                            </td>
                                                            <td>
                                                                <div class="d-flex align-items-center">
                                                                    <div class="flex-shrink-0 me-2">
                                                                        <img src="~/images/users/avatar-1.jpg" alt="" class="avatar-xs rounded-circle" />
                                                                    </div>
                                                                    <div class="flex-grow-1">@department.NAME</div>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                @department.SHORT_NAME
                                                            </td>
                                                            <td>
                                                                <partial name="_Status" model="@department.STATUS"/>
                                                            </td>
                                                            <td>
                                                                <button class="btn btn-info btn-sm">
                                                                    <i class="ri-edit-2-fill"></i>
                                                                </button>
                                                                <button class="btn btn-danger btn-sm">
                                                                    <i class="ri-delete-bin-4-fill"></i>
                                                                </button>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <!-- Department List Data End -->
                                </div>
                                <button type="button" class="btn btn-primary btn-sm" id="sa-success">Click me</button>


                                @await Html.PartialAsync("_PaginationSummary")

                            </div> 
                        </div> 
                    </div>

                </div> 
            </div>
        </div>
    <div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
             const isSuccess = @Html.Raw(isSuccess ? "true" : "false");

            if(isSuccess)
            {
                $("#sa-success").click();
            }
        });
    </script>
}

